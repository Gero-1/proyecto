@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card">
                <div class="card-header">
                    Restablecer Contraseña
                </div>
                <div class="card-body">
                    <form asp-controller="Inicio" asp-action="RestablecerContrasena" method="post">
                        <input type="hidden" name="correo" value="@TempData["correo"]" />
                        <input class="form-control mb-3" type="password" placeholder="Nueva contraseña" required name="nuevaContrasena" />
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">
                                Restablecer Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
